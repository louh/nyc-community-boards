{
  "name": "nyc-community-boards",
  "version": "0.0.0",
  "description": "Find your neighborhood's community board",
  "author": "Lou Huang <lou@louhuang.com>",
  "license": "MIT",
  "homepage": "http://louhuang.com/nyc-community-boards",
  "repository": {
    "type": "git",
    "url": "https://github.com/louh/nyc-community-boards.git"
  },
  "bugs": {
    "url": "https://github.com/louh/nyc-community-boards/issues"
  },
  "scripts": {
    "start": "parcel src/index.html",
    "test": "standard ./src/js/**/*.js --verbose | snazzy",
    "build": "parcel build src/index.html",
    "predeploy": "npm test && npm run build",
    "deploy": "gh-pages --dist dist",
    "predeploy:surge": "npm run predeploy",
    "deploy:surge": "surge public --domain nyc-community-boards.surge.sh"
  },
  "main": "index.js",
  "dependencies": {
    "@babel/preset-env": "7.1.0",
    "@turf/bbox": "6.0.1",
    "@turf/boolean-point-in-polygon": "6.0.1",
    "leaflet": "1.3.4",
    "leaflet-geocoder-mapzen": "1.9.4",
    "leaflet-hash": "0.2.1",
    "redux": "4.0.1",
    "tangram": "0.15.4",
    "topojson": "3.0.2"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.7.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-standard": "4.0.0",
    "gh-pages": "2.0.1",
    "ndjson-cli": "0.3.1",
    "parcel-bundler": "1.10.3",
    "sass": "1.14.3",
    "snazzy": "8.0.0",
    "standard": "12.0.1",
    "surge": "0.20.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslint": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-double"
      ]
    }
  }
}
